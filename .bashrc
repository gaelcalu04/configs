
# Function to re-create a build directoy for cmake and run the cmake command
_cmake() {
	rm -rf build; mkdir build ; cd build; cmake ..;
}

# Git branch in prompt.
parse_git_branch() {
  git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}
